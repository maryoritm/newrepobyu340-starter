<main>
    <h1>Add New Classification</h1>

    <% if (message) { %>
        <div class="flash-message <%= message.includes('successfully') ? 'success' : 'error' %>">
            <%= message %>
        </div>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form action="/inv/add-classification" method="post">
                        <div class="form-group">
                            <label for="classification_name">Classification Name:</label>
                            <input type="text" name="classification_name" id="classification_name" required
                                pattern="^[a-zA-Z0-9]+$" title="No spaces or special characters allowed"
                                value="<%= classification_name || '' %>">
                            <p class="instruction">Note: Classification name cannot contain spaces or special characters
                            </p>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn">Add Classification</button>
                            <a href="/inv/management" class="btn cancel">Cancel</a>
                        </div>
                    </form>
</main>