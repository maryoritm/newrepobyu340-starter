<h1>
    <%= title %>
</h1>
<% if (typeof flash !=='undefined' && flash.notice) { %>
    <div class="flash-notice">
        <%= flash.notice %>
    </div>
    <% } %>

        <div class="account-info">
            <h2>Welcome, <%= locals.accountData.account_firstname %>
            </h2>

            <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>

            <% if (locals.accountData.account_type==='Employee' || locals.accountData.account_type==='Admin' ) { %>
                <h3>Inventory Management</h3>
                <p><a href="/inv/">Manage Inventory</a></p>
                <% } %>

                    <p>Email: <%= locals.accountData.account_email %>
                    </p>
                    <p>Account Type: <%= locals.accountData.account_type %>
                    </p>
        </div>